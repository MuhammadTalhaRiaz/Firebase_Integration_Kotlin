<!-- res/drawable/rounded_edittext_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@color/white" /> <!-- Background color when focused -->
            <stroke
                android:width="1dp"
                android:color="@android:color/white" /> <!-- Border color -->
        </shape>
    </item>
    <item>
        <!-- Default state -->
        <shape>
            <corners android:radius="12dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="@color/edittext" /> <!-- Default background color -->
            <stroke
                android:width="1dp"
                android:color="@android:color/white" /> <!-- Border color -->
        </shape>
    </item>
</selector>
